
@model BookViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row orderForm">
    <form asp-controller="Book" asp-action="AddBooks" method="post" role="form">
        <h3>Create new book</h3>

        <div class="form-group">
            <label asp-for="Book.Author"></label>
            <div>
                @Html.DropDownListFor(m => m.Book.Author.AuthorId,
                    new SelectList(Model.Authors.Select(x => new { Value = x.AuthorId, Text = x.Name }), "Value", "Text"), "Select an author",
                    htmlAttributes: new { @class = "form-control border-input" })
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Book.Title"></label>
            <div>
                <input asp-for="Book.Title" class="form-control" placeholder="Enter customers name" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Book" asp-action="Index" />
                &nbsp;   <input class="btn btn-success" type="submit" value="Create" />
                &nbsp;  <a class="btn btn-success" asp-controller="Author" asp-action="AddAuthor">Create New author</a>

            </div>
        </div>
    </form>
</div>