
@model Customer
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row orderForm">

    <form asp-controller="Customer" asp-action="AddCustomer" method="post" role="form">
        <h3>Create new customer</h3>
        <div class="form-group">
            <label asp-for="Name" class=" control-label"></label>
            <div>
                <input asp-for="Name" class="form-control" placeholder="Enter customers name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Customer" asp-action="Index" />
                &nbsp; <input class="btn btn-success" type="submit" value="Create" />
            </div>
        </div>
    </form>
</div>
