
@model AuthorViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="row orderForm">
    <form asp-controller="Author" asp-action="AddAuthor" method="post" role="form">
        @Html.HiddenFor(m => m.Referer)
        <h3>Create new author</h3>
        <div class="form-group">
            <label asp-for="Author.Name"></label>
            <div>
                <input asp-for="Author.Name" class="form-control" placeholder="Enter authors name" />
                <span asp-validation-for="Author.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Author" asp-action="Index" />
                &nbsp; <input class="btn btn-success" type="submit" value="Create" />
            </div>
        </div>
    </form>
</div>