@model LendViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="row orderForm">

    <form asp-controller="Lend" asp-action="LendBook" method="post" class="form-horizontal" role="form">
        <h3>Lend a book</h3>
        @Html.HiddenFor(m => Model.Book.BookId)
        <div class="form-group">
            <label asp-for="Book.Customer"></label>
            <div>

                @Html.DropDownListFor(m => m.Book.Customer.CustomerId,
                    new SelectList(Model.Customers.Select(x => new { Value = x.CustomerId, Text = x.Name }), "Value", "Text"),
                    "Select Customer",
                    htmlAttributes: new { @class = "form-control border-input" })
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Lend" asp-action="Index" />
                <input class="btn btn-success" type="submit" value="Lend" />
            </div>
        </div>
    </form>
</div>